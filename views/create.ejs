<style>
    body{
        background-color: blanchedalmond;
    }
</style>
<div class="lol">
    <h1>Post Creation</h1>
</div>
<div class="post-creation-container">
    <form action="/submit" method="post">
        <label for="ID">ID</label>
        <input type="text" placeholder="ID" name="ID" class="ID">

        <label for="title">Title</label>
        <input type="text" placeholder="Title" name="title" class="input-title">

        <label for="tag">Tags</label>
        <input type="text" placeholder="Tags" name="tag" class="tag">

        <label for="content" id="po">Content</label>
        <textarea class="content" placeholder="Write your content here..." name="content"></textarea>
        <button class="submit-button">Submit</button>

    </form>
</div>
