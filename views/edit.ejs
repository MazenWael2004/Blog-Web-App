<%- include("partials/header.ejs") %>
<style>
    body {
        background-color: blanchedalmond;
    }
</style>

<div class="lol">
    <h1>Edit Article</h1>
</div>

<div class="post-creation-container">
    <form action="/submit2" method="post">
        <label for="ID">ID</label>
        <input type="text" placeholder="ID" name="ID" class="ID" required>

        <label for="title">Title</label>
        <input type="text" placeholder="Title" name="title" class="input-title" required>

        <label for="tag">Tags</label>
        <input type="text" placeholder="Tags" name="tag" class="tag" required>

        <label for="content" id="po">Content</label>
        <textarea class="content" placeholder="Write your content here..." name="content" required></textarea>
        
        <button type="submit" class="submit-button">Save Changes</button>
    </form>
</div>
